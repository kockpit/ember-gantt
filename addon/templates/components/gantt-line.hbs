

<div class="gantt-line">

  {{! title - from title attribute or }}
  <div class="gantt-line-title">
    {{#if title}}
      <span>{{title}}</span>
    {{else}}
      {{yield
        (hash
          title=(component "gantt-line-title" line=this)
        )}}
    {{/if}}
  </div>

  {{! timeline }}
  <div class="gantt-line-timeline">

    {{! bar }}
    <div class="gantt-line-bar {{if isEditable 'gantt-line-bar-editable'}}" style={{barStyle}} title={{barTitle}}>


      {{yield
        (hash
          inlineChilds=(component "gantt-line-inline-childs" parentLine=this chart=chart)
          barContent=(component "gantt-line-barcontent" line=this)
        )
      }}

      {{#if isEditable}}
        <div class="bar-resize-l"></div>
        <div class="bar-resize-r"></div>
      {{/if}}

    </div>

    {{! months }}
    {{!--#each chart.timelineMonths as |month|}}
      <div class="gantt-timeline-month">
        {{#each month.days as |day|}}
          <div class="gantt-timeline-day {{if day.isWeekend 'gantt-timeline-day-weekend'}}"></div>
        {{/each}}
      </div>
    {{/each--}}

  </div>
</div>




<div class="gant-line-childs">

  {{! child lines }}
	{{yield
	  (hash
	    childLine=(component "gantt-line" chart=chart  parentLine=this)
	  )
	}}

</div>


