
<style>
  .gantt-timeline .gantt-timeline-days .day {
    width: {{dayWidthPx}};
  }
  .gantt-timeline .gantt-timeline-cws .cw {
    width: {{cwWidthPx}};
  }
</style>


<div class="gantt-timeline-grid">

  {{! today line }}
  {{#if showToday}}
    <div class="gantt-timeline-today" style={{todayStyle}}><div></div></div>
  {{/if}}

  {{! vertical grid}}
  <div class="gantt-timeline-vertical-grid">
    {{!--
      <div class="gantt-timeline-months">
        {{#each timelineScale.months as |month|}}
          <div class="gantt-timeline-month">
            <div class="gantt-timeline-days">
              {{#each month.days as |day|}}
                <div class="day {{if day.isWeekend 'day-weekend'}}"> </div>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    --}}
    <div class="gantt-timeline-days">
     {{#each timelineScale.months as |month|}}
        {{#each month.days as |day|}}
          <div class="day {{if day.isWeekend 'day-weekend'}}"> </div>
        {{/each}}
      {{/each}}
    </div>

  </div>

</div> {{! chart-grid end}}


{{! header }}
<div class="gantt-chart-header {{if isSticky 'gantt-chart-header-sticky'}}" style={{stickyPlaceholderStyle}}>
  <div class="gantt-chart-header-inner" style={{stickyStyle}}> {{! used for sticky handling }}

    <div class="gantt-header-title"><span>{{headerTitle}}</span></div>

    {{! header timeline }}
    <div class="gantt-timeline-scale" style={{scaleStyle}}>

      <div class="gantt-timeline-months" >
       {{#each timelineScale.months as |month|}}
          <div class="gantt-timeline-month" style={{month.style}}>

            {{! month }}
            <div class="gantt-timeline-month-name">
              <span>{{moment-format month.date 'MMMM YYYY'}}</span>
            </div>

          </div>
        {{/each}}
      </div>

      {{! calendar weeks }}
      {{!#if timelineDay}}
        <div class="gantt-timeline-cws">
         {{#each timelineScale.calendarWeeks as |cw|}}
              <div class="cw">{{cw.nr}}</div>
          {{/each}}
        </div>
      {{!/if}}

      {{! days in month }}
      {{#if timelineDay}}
        <div class="gantt-timeline-days">
         {{#each timelineScale.months as |month|}}
            {{#each month.days as |day|}}
              <div class="day {{if day.isWeekend 'day-weekend'}}">{{day.nr}}</div>
            {{/each}}
          {{/each}}
        </div>
      {{/if}}

 

    </div>

  </div>
</div>
